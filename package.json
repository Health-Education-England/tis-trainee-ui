{
  "name": "trainee-ui-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.8.0",
    "@material-ui/icons": "^4.5.1",
    "@sentry/browser": "^5.11.1",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/yup": "0.26.35",
    "aws-amplify": "^2.2.4",
    "aws-amplify-react": "^3.1.5",
    "axios": "^0.19.0",
    "contentful": "^7.11.3",
    "formik": "^2.1.4",
    "moment": "^2.24.0",
    "nhsuk-frontend": "^3.0.2",
    "nhsuk-react-components": "^1.1.3",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-axe": "^3.3.0",
    "react-dom": "^16.12.0",
    "react-loading": "^2.0.3",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.0",
    "react-test-renderer": "^16.13.0",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.3.0",
    "stylelint": "^13.0.0",
    "typescript": "^3.7.4",
    "yup": "^0.28.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false --testResultsProcessor ./node_modules/jest-sonar-reporter/index.js",
    "cypress": "cypress run",
    "cypress-open": "cypress open",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "stylelint": "stylelint \"src/**/*.scss\" \"src/**/*.css\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.9.1",
    "@types/react-test-renderer": "^16.9.2",
    "@types/redux-mock-store": "^1.0.2",
    "cypress": "^4.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^1.19.1",
    "stylelint-prettier": "^1.1.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/src/models/*.{js,jsx,ts,tsx}",
      "!**/src/mock-data/*.{js,jsx,ts,tsx}",
      "!**/src/redux/store/*.{js,jsx,ts,tsx}",
      "!**/src/*.{js,ts}",
      "!**/src/components/authentication/*.{js,jsx,ts,tsx}",
      "!**/src/redux/reducers/index.ts",
      "!**/src/components/forms/formr-part-a/ValidationSchema.ts",
      "**/src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ]
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": ".",
    "reportFile": "coverage/sonar-report.xml",
    "indent": 4
  }
}
