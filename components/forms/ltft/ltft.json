{
  "name": "ltft",
  "pages": [
    {
      "pageName": "Your Programme",
      "importantTxtName": "",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Your Programme",
          "fields": [
            {
              "name": "pmId",
              "type": "select",
              "label": "Which programme will your proposed change in working hours affect?",
              "optionsKey": "pmOptions",
              "visible": true,
              "isDisplayAltVal": true
            }
          ]
        }
      ]
    },
    {
      "pageName": "Working hours before change",
      "importantTxtName": "",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Working hours before change",
          "fields": [
            {
              "name": "wteBeforeChange",
              "type": "text",
              "label": "What percentage of your full time hours do you work before your proposed change?",
              "hint": "e.g. 100 is full time, 80 is 80% of your full time hours, etc.",

              "visible": true,
              "width": 2,
              "isNumberField": true,
              "maxDigits": 3
            }
          ]
        }
      ]
    },
    {
      "pageName": "Proposed change to your working hours",
      "importantTxtName": "",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Proposed change to your working hours",
          "fields": [
            {
              "name": "wte",
              "type": "text",
              "label": "What percentage of your full time hours do you want to work?",
              "hint": "e.g. 100 is full time, 80 is 80% of your full time hours etc.",
              "visible": true,
              "width": 2,
              "isNumberField": true,
              "maxDigits": 3
            }
          ]
        }
      ]
    },
    {
      "pageName": "Start date",
      "importantTxtName": "ltftStartDateImportantText",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Start date for change to your working hours",
          "fields": [
            {
              "name": "startDate",
              "label": "When should this change to your working hours begin?",
              "type": "date",
              "visible": true,
              "warning": {
                "matcher": "ltft16WeeksTest",
                "msgText": "Warning: Giving less than 16 weeks notice to change your working hours is classed as a late application and will only be considered on an exceptional basis."
              }
            }
          ]
        }
      ]
    },
    {
      "pageName": "Pre-approver discussions",
      "importantTxtName": "ltftDiscussionInstructions",
      "expanderLinkName": "preApproverInfo",
      "sections": [
        {
          "sectionHeader": "Your pre-approver details",
          "fields": [
            {
              "name": "tpdName",
              "label": "Pre-approver name",
              "placeholder": "type here...",
              "type": "text",
              "visible": true
            },
            {
              "name": "tpdEmail",
              "label": "Pre-approver email address",
              "placeholder": "type here...",
              "type": "text",
              "visible": true
            }
          ]
        }
      ]
    },
    {
      "pageName": "Other discussions",
      "importantTxtName": "ltftOtherDiscussionsInstructions",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Other discussions (if applicable)",
          "fields": [
            {
              "name": "otherDiscussions",
              "type": "array",
              "hint": "If you have discussed your proposals with anyone else then please add them here",
              "label": "If you have discussed your proposals with anyone else then please add them here",
              "visible": true,
              "objectFields": [
                {
                  "name": "name",
                  "label": "Name",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true
                },
                {
                  "name": "email",
                  "label": "Email Address",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true
                },
                {
                  "name": "role",
                  "label": "Role / Position",
                  "placeholder": "type here...",
                  "type": "select",
                  "optionsKey": "ltftRoles",
                  "visible": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "pageName": "Reason(s) for applying",
      "importantTxtName": "ltftReasonsInstructions",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Reason(s) for applying",
          "fields": [
            {
              "name": "reasonsSelected",
              "label": "Why are you applying?",
              "placeholder": "Select all reasons that apply",
              "type": "select",
              "isMultiSelect": true,
              "optionsKey": "ltftReasons",
              "dependencies": ["reasonsOtherDetail"],
              "visible": true,
              "hint": "You can choose more than one reason if applicable (for example, 'Caring responsibilities' and 'Training / career development')."
            },
            {
              "name": "reasonsOtherDetail",
              "label": "Other reason",
              "placeholder": "type here...",
              "type": "text",
              "visibleIf": ["other"],
              "parent": "reasonsSelected",
              "visible": false,
              "hint": "Please provide details for your 'other reason'."
            }
          ]
        }
      ]
    },
    {
      "pageName": "Supporting information",
      "importantTxtName": "",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Supporting information",
          "fields": [
            {
              "name": "supportingInformation",
              "label": "Please provide brief supporting information for your application.",
              "hint": "This helps us understand your circumstances and proposed arrangements.",
              "placeholder": "Example:\n'I would like to apply for 60% LTFT from March 2026 due to ongoing caring responsibilities. I plan to work three days per week and would appreciate flexibility around clinic days.'",
              "type": "textArea",
              "visible": true
            }
          ]
        }
      ]
    },
    {
      "pageName": "Tier 2 / Skilled Worker status",
      "importantTxtName": "ltftTier2VisaImportantText",
      "expanderLinkName": "",
      "sections": [
        {
          "sectionHeader": "Tier 2 / Skilled Worker status",
          "fields": [
            {
              "name": "skilledWorkerVisaHolder",
              "label": "Are you a Tier 2 / Skilled Worker Visa holder?",
              "type": "radio",
              "optionsKey": "yesNo",
              "visible": true
            }
          ]
        }
      ]
    },
    {
      "pageName": "Personal Details",
      "importantTxtName": "personalDetailsCheckText",
      "expanderLinkName": "dataSource",
      "sections": [
        {
          "sectionHeader": "Personal Details",
          "fields": [
            {
              "name": "personalDetails",
              "type": "dto",
              "visible": true,
              "objectFields": [
                {
                  "name": "forenames",
                  "label": "Forename ",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true,
                  "canGrow": true
                },
                {
                  "name": "surname",
                  "label": "Surname (GMC-Registered)",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true,
                  "canGrow": true
                },
                {
                  "name": "telephoneNumber",
                  "label": "Contact Telephone",
                  "placeholder": "type here...",
                  "type": "phone",
                  "visible": true
                },
                {
                  "name": "mobileNumber",
                  "label": "Contact Mobile",
                  "placeholder": "type here...",
                  "type": "phone",
                  "visible": true
                },
                {
                  "name": "email",
                  "label": "Email Address",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true
                },
                {
                  "name": "gmcNumber",
                  "label": "GMC Number",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true
                },
                {
                  "name": "gdcNumber",
                  "label": "GDC Number (if applicable)",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true
                },
                {
                  "name": "publicHealthNumber",
                  "label": "Public Health Number (if applicable)",
                  "placeholder": "type here...",
                  "type": "text",
                  "visible": true
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "declarations": [
    {
      "name": "informationIsCorrect",
      "label": "I confirm that the information I have provided is correct and accurate to the best of my knowledge."
    },
    {
      "name": "notGuaranteed",
      "label": "I understand that approval of my application is not guaranteed."
    }
  ]
}
